net = import("net")

load("scripts/lib/packets.ank")

func logout(player, packet) {
	if player.Busy() {
		player.SendPacket(net.cannotLogout)
		return
	}

	if player.Connected() {
		return
	}
	player.SendPacket(net.logout)
	player.Destroy()
}

bind.packet(packets.logout, logout)

bind.packet(packets.closeStream, logout)
