bind.command("say", func(player, args) {
	if len(args) < 1 {
		player.Message("Invalid args.  Usage: ::say <msg>")
		return
	}
	msg = "@whi@[@cya@GLOBAL@whi@] "
	if player.Rank == 2 {
		msg += "@red@~"
	} else if player.Rank == 1 {
		msg += "@blu@@"
	} else {
		msg += "@yel@"
	}
	msg += player.Username + "@yel@:"
	for word in args {
		msg += " " + word
	}
	announce(msg)
})
